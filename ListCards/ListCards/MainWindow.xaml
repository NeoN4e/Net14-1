<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ListCardsProject" x:Class="ListCardsProject.MainWindow"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded_1">
  
  
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="258*"/>
            <ColumnDefinition Width="259*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listCards" HorizontalAlignment="Left" Height="252" Margin="41,28,0,0" VerticalAlignment="Top" Width="207">
            <ListBox.DataContext>
                <local:ListCards/>
            </ListBox.DataContext>
        </ListBox>
        <TextBox x:Name="newElem" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="24,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Add" Grid.Column="1" HorizontalAlignment="Left" Margin="174,28,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.44,-0.261" Click="Button_Click_1"/>
        <Button Content="Delete" Grid.Column="1" HorizontalAlignment="Left" Margin="24,84,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>

    </Grid>
</Window>
